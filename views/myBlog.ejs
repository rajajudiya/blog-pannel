<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>blog page</title>z
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">My Blog Page</h1>

                <!-- Blog Post -->

                <!-- Display Blog Posts -->
                <div class="flex">
                  <% myBlogData.forEach((blogs)=>{ %>
                      <div class="group w-4/12 border border-gray-300 rounded-2xl mb-4 mx-4">
                          <div class="flex items-center">
                              <img src="<%=blogs.path%>" alt="blogs img" class="rounded-t-2xl object-cover"
                                  width="500" height="300px">
                          </div>
                          <div class="p-4 lg:p-6 transition-all duration-300 rounded-b-2xl group-hover:bg-gray-50">
                              <span class="text-indigo-600 font-medium mb-3 block">
                                  <%=blogs.date%>
                              </span>
                              <h4 class="text-xl text-gray-900 font-medium leading-8 mb-1">
                                  <%=blogs.title%>
                              </h4>
                              <p class="text-gray-500 leading-6 mb-1">
                                  <%=blogs.description%>
                              </p>
                              <a href="/my_blogEdit/<%=blogs._id%>"
                                  class="cursor-pointer text-lg text-indigo-600 font-semibold">Edit</a>
                              ||
                              <a href="/my_BlogDelete/<%=blogs._id%>"
                                  class="cursor-pointer text-lg text-red-600 font-semibold">Delete</a>
                          </div>
                      </div>

                      <% }) %>
              </div>

            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>