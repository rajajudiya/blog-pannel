<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Choice Topic</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

  <!-- Custom Styles -->
  <style>
    body {
      background-color: #f8f9fa;
    }

    .form-card {
      max-width: 500px;
      margin: 0 auto;
      padding: 20px;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-card h1 {
      text-align: center;
      font-size: 2rem;
      margin-bottom: 20px;
      color: #343a40;
    }

    .btn-primary {
      width: 100%;
      background-color: #3498db;
      border-color: #007bff;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #0056b3;
    }
  </style>
</head>

<body>
  <div class="container mt-5">
    <!-- Card wrapping the form -->
    <div class="form-card">
      <h1 class="mb-4">Choose a Topic</h1>

      <!-- Topic selection form -->
      <form action="/addTopiceCon" method="post">
        <div class="mb-3">
          <label for="topicSelect" class="form-label">Select a Topic</label>
         <input type="text" name="topicName" class="form-control" placeholder="Enter the Topic">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>


    <!-- view section -->
    <div class="view-section">
      <h1 class="mb-4 text-center pt-5">View Topics</h1>
    </div>
    <div class="d-flex justify-content-center">
      <table class="table table-striped bg-dark pt-5" style="width: 500px;">
        <thead>
          <tr>
            <th scope="col">Topics Name</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% add_Topics.forEach((topics) => { %>
            <tr>
              <td><%= topics.topicName %></td>
              <td><a href="deleteTopicCon/<%= topics._id %>" class="btn btn-danger">Delete</a></td>
              </tr>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>