<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>blog Page Add</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/register.css">
</head>

<body>
    <div class="container mt-5 ">
        <h2 class="text-center">Blogs Post</h2>
        <div class="row">
            <!-- Display Blog Posts -->
            <% if (blogData.length > 0) { %>
                <% blogData.forEach(post=> { %>
                    <div class="col-md-6 mb-4">
                       <div class="card" style="width: 100%; object-fit: cover;">
                            <img src="<%= post.imgPath %>" alt="<%= post.title %>" width="100%" height="500px">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= post.title %>
                                </h5>
                                <p class="card-text">
                                    <%= post.description %>
                                </p>
                                <p class="text-muted">Posted by: <strong>
                                        <%= post.userName %>
                                    </strong></p>
                                <p class="text-muted">Date: <strong>
                                        <%= new Date(post.date).toLocaleDateString('en-GB') %>
                                    </strong></p>
                            </div>
                        </div>
                    </div>
                <% }) %>
                <% } else { %>
                    <p class="text-center">No blog posts available. Start by adding one!</p>
            <% } %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>